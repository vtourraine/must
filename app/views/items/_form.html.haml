= form_for (@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  
  .field
    = f.label :medium
    = f.text_field :medium
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :authors
    = f.text_field :authors
  .field
    = f.label :published_on
    = f.date_select :published_on, {:start_year => 1900, :discard_day => true, :discard_month => true}
  .field
    = f.label :links
    = f.text_area :links, {:cols => 50, :rows => 3}
  .field
    = f.label :note
    = f.text_area :note, {:cols => 50, :rows => 10}
  .field
    = f.label :checked_on
    = f.date_select :checked_on
  .field
    = f.label :favorite
    = f.check_box :favorite
  .field
    = f.label :next
    = f.check_box :next
  .field
    = f.submit